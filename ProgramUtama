fungsi.start_file(data_user,file_user)
fungsi.start_file(data_wahana,file_wahana)
fungsi.start_file(data_pembelian_tiket, file_pembelian)
fungsi.start_file(data_penggunaan_wahana, file_penggunaan)
fungsi.start_file(data_kepemilikan_tiket, file_tiket)
fungsi.start_file(data_refund,file_refund)
fungsi.start_file(data_kritik, file_kritik)
print()
